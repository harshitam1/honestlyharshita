---
const { pathname } = Astro.url;

const navItems = [
  { name: 'Home', path: '/' },
  { name: 'About', path: '/about' },
  { name: 'Journal', path: '/journal' },
  { name: 'Categories', path: '/categories' },
  { name: 'Contact', path: '/contact' }
];

const isActive = (path: string) => pathname === path;
---

<nav class="backdrop-blur-md border-b border-navy-200 sticky top-0 z-50 bg-white/95 shadow-sm">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <a 
        href="/" 
        class="font-serif font-bold text-2xl text-navy-800 hover:text-navy-900 transition-colors"
      >
        honestly, harshita
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex space-x-8">
        {navItems.map((item) => (
          <a
            href={item.path}
            class={`font-mono font-medium transition-all duration-200 px-3 py-2 rounded-lg ${
              isActive(item.path)
                ? 'text-navy-800 bg-navy-100'
                : 'text-gray-700 hover:text-navy-700 hover:bg-cream-100'
            }`}
          >
            {item.name}
          </a>
        ))}
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="text-gray-700 hover:text-navy-700 transition-colors p-2 rounded-lg hover:bg-cream-100"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden animate-slide-in">
      <div class="px-2 pt-2 pb-3 space-y-2 bg-white/95 border-t border-navy-200 backdrop-blur-sm">
        {navItems.map((item) => (
          <a
            href={item.path}
            class={`block px-4 py-3 rounded-lg text-base font-mono font-medium transition-all ${
              isActive(item.path)
                ? 'text-navy-800 bg-navy-100'
                : 'text-gray-700 hover:text-navy-700 hover:bg-cream-100'
            }`}
          >
            {item.name}
          </a>
        ))}
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>