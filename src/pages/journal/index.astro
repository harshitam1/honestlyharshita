---
import Layout from '../../layouts/Layout.astro';
import { blogPosts, categories } from '../../data/blogData';
---

<Layout title="Journal - honestly, harshita" description="All my thoughts, stories, and reflections">
  <section class="min-h-screen py-20 bg-cream-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h1 class="font-serif text-4xl md:text-6xl font-bold text-navy-800 mb-6">
          My Journal
        </h1>
        <p class="text-xl text-navy-700 font-body max-w-2xl mx-auto">
          thoughts, stories, and everything in between
        </p>
      </div>

      <!-- Categories -->
      <div class="flex flex-wrap gap-3 justify-center mb-12">
        <span class="px-4 py-2 bg-navy-800 text-cream-50 font-mono font-medium rounded-lg">
          All Posts
        </span>
        {categories.map((category) => (
          <span class="px-4 py-2 bg-cream-200 text-navy-700 font-mono font-medium rounded-lg hover:bg-cream-300 transition-colors cursor-pointer">
            {category.name} ({category.count})
          </span>
        ))}
      </div>

      <!-- Blog Posts Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {blogPosts.map((post, index) => (
          <article 
            class="bg-white p-6 rounded-lg shadow-md hover:-translate-y-1 hover:shadow-lg transition-all duration-300 animate-fade-in"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <div class="flex items-center gap-2 text-sm text-navy-800 mb-4 font-sans">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17v4a2 2 0 002 2h4M11 7.343V10a1 1 0 001 1h2.657"></path>
              </svg>
              <span>{post.readTime} min read</span>
              <span>•</span>
              <span>{new Date(post.date).toLocaleDateString('en-US', {
                month: 'short',
                day: 'numeric',
                year: 'numeric'
              })}</span>
              {post.pinned && (
                <>
                  <span>•</span>
                  <div class="flex items-center gap-1">
                    <svg class="w-3 h-3 text-cream-600" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M14,2A2,2 0 0,1 16,4V6H20.5L22,7.5V9H15L13.5,7.5H9.5A2.5,2.5 0 0,0 7,10V11H2V13H7V10A0.5,0.5 0 0,1 7.5,9.5H11L12.5,11H22V12.5L20.5,14H16V16A2,2 0 0,1 14,18H13V22H11V18H10A2,2 0 0,1 8,16V14H14V4A2,2 0 0,1 14,2Z"/>
                    </svg>
                    <span class="text-xs font-mono text-cream-600 uppercase tracking-wide">Pinned</span>
                  </div>
                </>
              )}
            </div>
            
            <h2 class="font-serif text-2xl font-bold text-navy-800 mb-4 leading-tight">
              {post.title}
            </h2>
            
            <p class="text-navy-700 mb-6 leading-relaxed font-body">
              {post.excerpt}
            </p>
            
            <div class="flex flex-wrap gap-2 mb-6">
              {post.categories.map((category) => (
                <span class="px-3 py-1 bg-sage-100 text-navy-700 text-sm rounded-lg font-mono border border-sage-200">
                  {category}
                </span>
              ))}
            </div>
            
            <a 
              href={`/journal/${post.id}`}
              class="inline-flex items-center text-navy-800 font-mono font-medium hover:text-navy-900 transition-all duration-300"
            >
              Read more
              <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>